<%- include('partials/header') -%>
<div class="container">
<h3>Add Book</h3>
<div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3"><a href="#completed">Completed</a></li>
            <li class="tab col s3"><a href="#readingList">Reading List</a></li>
          </ul>
        </div>
    <div id="completed" class="col s12">
    <form action="books/addBook" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="author" name="author">
                <label for="author">Author</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="number" id="rating" name="rating" step=".01" min="0" max="10" autocomplete="off">
                <label for="rating">Rating</label>
            </div>
        </div>

        <!--<div class="row">
            <div class="input-field">
